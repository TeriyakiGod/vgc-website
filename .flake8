[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
exclude = 
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    static/admin,
    static/wagtailadmin
per-file-ignores =
    __init__.py:F401
    settings/*.py:F401,F403
