[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    env,
    .env,
    node_modules,
    static/admin,
    static/wagtailadmin
per-file-ignores =
    __init__.py:F401
    settings/*.py:F401,F403,F405
    */settings/*.py:F401,F403,F405
